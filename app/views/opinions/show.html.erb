<%= link_to "Back", opinion_path %>
<%= @opinion.title %>
<%= @opinion.body %>

<% if user_signed_in? %>
	<%= form_for @comment do |f| %>

		<%= f.text_field :body %>

		<%= f.hidden_field :user_id, :value => current_user.id %>
		<%= f.hidden_field :opinion_id, :value => @opinion.id %>

		<%= f.submit 'Post' %>

	<% end %>
	<% else %>
	<p>You must <%= link_to 'sign in', new_user_registration_path %> to comment </p>
<% end %>

<% unless @comments.empty? %>
<% @comments.each do |comment| %>
	<%= comment.user.user_name %>
	<%= comment.body  %>
	<% end %>
<% end %>

<% if user_signed_in? %>
	<% if @opinion.votes.exists?(user_id: current_user.id) %>
		<button class='btn btn-large' disabled>
			<%= link_to("Upvote", vote_opinion_path(@opinion, 'true'), method: 'post')%>  
		</button>
		<button class='btn btn-large' disabled>
		<%= link_to("Downvote", vote_opinion_path(@opinion, 'false'), method: 'post')  %>
		</button>
	<% else %>
		<button class='btn btn-large'>
			<%= link_to("Upvote", vote_opinion_path(@opinion, 'true'), method: 'post')%>  
		</button>
		<button class='btn btn-large'>
		<%= link_to("Downvote", vote_opinion_path(@opinion, 'false'), method: 'post')  %>
		</button>
	<% end %>
<% end %>