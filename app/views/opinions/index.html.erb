<%= render 'layouts/header'  %>

<div class="cover-image">
	<div class="cover-image blurred-img"></div>
</div>
<div class='cover-title center'>
	<h1 style="font-weight: 100;">Opinions</h1>
	<p>The place for those short, quick hitting opinions that are itching to get out.</p>
	<br>
		<%= link_to 'Post an opinion', new_user_registration_path, class: 'new-opinion btn btn-primary btn-large' %>
</div>

<div class='opinions-list'>
	<p class='trending-title'>
		<span class='glyphicon glyphicon-chevron-down'></span>  trending opinions 
	</p>
<% @opinions.each do |opinion| %>
<div class='opinions'>
	<!-- <p class='vote-count'><%#= opinion.upvote_count %>...<%#= opinion.downvote_count %></p> -->
	<p><%= link_to "#{opinion.title}", opinion_path(opinion), class: 'opinions-titles center' %>
		<br><span class='opinion-user'>by <%= opinion.user.user_name %></span></p>
	<p><%= link_to "Comments: #{opinion.comments.size}", opinion_path(opinion), class: 'opinions-comments' %></p>
</div>
<% end %>
</div>


